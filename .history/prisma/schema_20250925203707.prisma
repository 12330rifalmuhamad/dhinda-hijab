// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Atau provider database Anda
  url      = env("DATABASE_URL")
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  products  Product[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Product {
  id          String        @id @default(cuid())
  name        String
  description String?
  price       Int
  // Hapus 'imageUrl' jika Anda tidak ingin menyimpan gambar utama secara terpisah
  // imageUrl    String?

  images      ProductImage[] // <-- BARIS BARU: Hubungan ke banyak gambar

  categoryId  String
  category    Category      @relation(fields: [categoryId], references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// <-- MODEL BARU: Untuk menyimpan banyak gambar produk
model ProductImage {
  id        String    @id @default(cuid())
  url       String    // URL gambar
  productId String
  product   Product   @relation(fields: [productId], references: [id])
  order     Int       @default(0) // Untuk menentukan urutan gambar (opsional)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}